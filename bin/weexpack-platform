#!/usr/bin/env node

const program = require('commander');
const chalk = require('chalk');
const create = require('../src/create/create');
const cli = require('../src/cli');
const publish = require('../src/publish/publish');
program
    .command('add [platform-name] [options]')
    .description('add a new platform project')
    .action(function (pluginName) {
      let args=[];
      process.argv.forEach(function(arg,i){
        if(arg!='[object Object]') {//fix commander’s bug
          args.push(arg);
          if (i == 1) {
            args.push('platform');
          }
        }
      });
       cli(args);
    });

program
    .command('remove [platform-name] [options]')
    .description('remove a platform project')
    .action(function (pluginName) {
      let args=[];
      process.argv.forEach(function(arg,i){
        if(arg!='[object Object]') {//fix commander’s bug
          args.push(arg);
          if (i == 1) {
            args.push('platform');
          }
        }
      });
      cli(args);
    });

program
    .command('list [options]')
    .description('all installed  platform project')
    .action(function (pluginName) {
      let args=[];
      process.argv.forEach(function(arg,i){
        if(arg!='[object Object]') {//fix commander’s bug
          args.push(arg);
          if (i == 1) {
            args.push('platform');
          }
        }
      });
      cli(args);
    });




program.parse(process.argv);


